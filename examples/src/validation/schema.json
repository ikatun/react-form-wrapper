{
  "id": "http://some.site.somewhere/hotel-schema#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Hotel Schema",
  "type": "object",
  "required": [ "address", "profile" ],
  "properties": {
    "address": {
      "title": "Address",
      "$ref": "#/definitions/Address"
    },
    "profile": {
      "title": "Profile",
      "$ref": "#/definitions/Profile"
    },
    "roomsAvailable": {
      "type": "integer",
      "title": "Rooms Available",
      "minimum": 0,
      "maximum": 250
    },
    "hasBeachAccess": {
      "title": "Beach Access Available",
      "type": "boolean"
    }
  },
  "definitions": {
    "Address": {
      "type": "object",
      "required": ["streetAddress", "addressLocality", "addressRegion", "postalCode"],
      "properties": {
        "streetAddress": {
          "type": "string",
          "title": "Street Address"
        },
        "addressLocality": {
          "type": "string",
          "title": "City"
        },
        "addressRegion": {
          "type": "string",
          "title": "State"
        },
        "postalCode": {
          "type": "string",
          "title": "Postal Code"
        }
      }
    },
    "Profile": {
      "type": "object",
      "required": [ "name", "roomCount" ],
      "properties": {
        "name": {
          "type": "string",
          "title": "Name"
        },
        "roomCount": {
          "type": "integer",
          "title": "Number of Rooms in Hotel",
          "minimum": 0
        },
        "features": {
          "type": "array",
          "title": "Features",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        }
      }
    }
  }
}
